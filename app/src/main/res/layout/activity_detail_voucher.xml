<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/v_detail_harga"
        android:text="POINT"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="@drawable/bg_rounded_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/v_detail_deskripsi"
        android:text="DESC"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/v_detail_masa_tenggang"
        android:text="EXPIRED"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/btn_redeem_point"
        android:padding="0dp"
        android:elevation="0dp"
        android:backgroundTint="#74de86"
        android:clickable="true"
        android:text="REDEEM POINT"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">
    </Button>

</LinearLayout>