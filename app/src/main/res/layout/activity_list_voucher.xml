<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.joglove.assyst.CardActivity">

    <include
        layout="@layout/header"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toSet"
        android:layout_marginLeft="10dp"
        android:text="My Point :"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textSize="10pt"
        android:text="2000 p"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Select Voucher"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">
        <TextView
            android:text="Pulsa Rp 20.000,-"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textSize="14pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:text="100p"
            android:gravity="bottom|end"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">
        <TextView
            android:text="Pulsa Rp 50.000,-"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textSize="14pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:text="300p"
            android:gravity="bottom|end"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">
        <TextView
            android:text="Voucher Belanja"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textSize="14pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:text="400p"
            android:gravity="bottom|end"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">
        <TextView
            android:text="Voucher Kuliner"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textSize="14pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="100p"
            android:gravity="bottom|end"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">
        <TextView
            android:text="Tiket"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:textSize="14pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:text="300p"
            android:gravity="bottom|end"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
